<UserControl x:Class="ExcelDatabaseImportTool.Views.ImportHistoryView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ExcelDatabaseImportTool.Views"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="1000">
    
    <UserControl.Resources>
        <!-- Button Styles -->
        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#2196F3"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1976D2"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#BDBDBD"/>
                    <Setter Property="Cursor" Value="Arrow"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SecondaryButtonStyle" TargetType="Button" BasedOn="{StaticResource PrimaryButtonStyle}">
            <Setter Property="Background" Value="#757575"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#616161"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Status Badge Style -->
        <Style x:Key="StatusBadgeStyle" TargetType="Border">
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="10,4"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
        </Style>
    </UserControl.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#F5F5F5" Padding="15" Margin="0,0,0,15" CornerRadius="4">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0">
                    <TextBlock Text="Import History" 
                             FontSize="20" 
                             FontWeight="Bold"
                             Foreground="#424242"/>
                    <TextBlock Text="View and search past import operations" 
                             FontSize="12" 
                             Foreground="#757575"
                             Margin="0,5,0,0"/>
                </StackPanel>

                <Button Grid.Column="1" 
                        Content="ðŸ”„ Refresh" 
                        Command="{Binding RefreshCommand}"
                        Style="{StaticResource PrimaryButtonStyle}"
                        VerticalAlignment="Center"/>
            </Grid>
        </Border>

        <!-- Filters Section -->
        <Border Grid.Row="1" BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="4" Padding="15" Margin="0,0,0,15">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" 
                         Text="Filters" 
                         FontSize="14" 
                         FontWeight="SemiBold"
                         Margin="0,0,0,10"/>

                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- From Date -->
                    <TextBlock Grid.Column="0" 
                             Text="From:" 
                             VerticalAlignment="Center"
                             Margin="0,0,10,0"/>
                    <DatePicker Grid.Column="1" 
                              SelectedDate="{Binding FilterFromDate}"
                              Padding="6"
                              Margin="0,0,15,0"/>

                    <!-- To Date -->
                    <TextBlock Grid.Column="2" 
                             Text="To:" 
                             VerticalAlignment="Center"
                             Margin="0,0,10,0"/>
                    <DatePicker Grid.Column="3" 
                              SelectedDate="{Binding FilterToDate}"
                              Padding="6"
                              Margin="0,0,15,0"/>

                    <!-- Status Filter -->
                    <TextBlock Grid.Column="4" 
                             Text="Status:" 
                             VerticalAlignment="Center"
                             Margin="0,0,10,0"/>
                    <ComboBox Grid.Column="5" 
                            SelectedItem="{Binding FilterStatus}"
                            Padding="6"
                            Margin="0,0,15,0">
                        <ComboBoxItem Content="All"/>
                        <ComboBoxItem Content="Success"/>
                        <ComboBoxItem Content="Failed"/>
                        <ComboBoxItem Content="Partial"/>
                    </ComboBox>

                    <!-- Search -->
                    <TextBlock Grid.Column="6" 
                             Text="Search:" 
                             VerticalAlignment="Center"
                             Margin="0,0,10,0"/>
                    <TextBox Grid.Column="7" 
                           Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                           Padding="6"
                           Margin="0,0,10,0"/>

                    <!-- Filter Buttons -->
                    <StackPanel Grid.Column="8" Orientation="Horizontal">
                        <Button Content="Apply" 
                              Command="{Binding ApplyFiltersCommand}"
                              Style="{StaticResource PrimaryButtonStyle}"
                              Padding="10,6"/>
                        <Button Content="Clear" 
                              Command="{Binding ClearFiltersCommand}"
                              Style="{StaticResource SecondaryButtonStyle}"
                              Padding="10,6"/>
                    </StackPanel>
                </Grid>
            </Grid>
        </Border>

        <!-- Import Logs Grid -->
        <Border Grid.Row="2" BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="4">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="5"/>
                    <RowDefinition Height="200" MinHeight="150"/>
                </Grid.RowDefinitions>

                <!-- Logs List -->
                <DataGrid Grid.Row="0"
                        ItemsSource="{Binding ImportLogs}"
                        SelectedItem="{Binding SelectedImportLog}"
                        AutoGenerateColumns="False"
                        IsReadOnly="True"
                        SelectionMode="Single"
                        GridLinesVisibility="Horizontal"
                        HeadersVisibility="Column"
                        RowHeight="45"
                        Background="White">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Start Time" 
                                          Binding="{Binding StartTime, StringFormat='{}{0:yyyy-MM-dd HH:mm:ss}'}" 
                                          Width="150"/>
                        <DataGridTextColumn Header="Excel File" 
                                          Binding="{Binding ExcelFileName}" 
                                          Width="*" 
                                          MinWidth="150"/>
                        <DataGridTemplateColumn Header="Status" Width="100">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Border>
                                        <Border.Style>
                                            <Style TargetType="Border" BasedOn="{StaticResource StatusBadgeStyle}">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Status}" Value="Success">
                                                        <Setter Property="Background" Value="#E8F5E9"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Status}" Value="Failed">
                                                        <Setter Property="Background" Value="#FFEBEE"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Status}" Value="Partial">
                                                        <Setter Property="Background" Value="#FFF3E0"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                        <TextBlock Text="{Binding Status}" 
                                                 FontWeight="SemiBold"
                                                 FontSize="11">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Status}" Value="Success">
                                                            <Setter Property="Foreground" Value="#388E3C"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Status}" Value="Failed">
                                                            <Setter Property="Foreground" Value="#D32F2F"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Status}" Value="Partial">
                                                            <Setter Property="Foreground" Value="#F57C00"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </Border>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTextColumn Header="Total" 
                                          Binding="{Binding TotalRecords}" 
                                          Width="70"/>
                        <DataGridTextColumn Header="Success" 
                                          Binding="{Binding SuccessfulRecords}" 
                                          Width="70"/>
                        <DataGridTextColumn Header="Failed" 
                                          Binding="{Binding FailedRecords}" 
                                          Width="70"/>
                        <DataGridTextColumn Header="Duration" 
                                          Width="100">
                            <DataGridTextColumn.Binding>
                                <MultiBinding StringFormat="{}{0:hh\\:mm\\:ss}">
                                    <Binding Path="EndTime"/>
                                    <Binding Path="StartTime"/>
                                    <Binding Converter="{StaticResource DurationConverter}"/>
                                </MultiBinding>
                            </DataGridTextColumn.Binding>
                        </DataGridTextColumn>
                    </DataGrid.Columns>
                </DataGrid>

                <GridSplitter Grid.Row="1" Height="5" HorizontalAlignment="Stretch" Background="#E0E0E0"/>

                <!-- Error Details Panel -->
                <Border Grid.Row="2" BorderBrush="#E0E0E0" BorderThickness="0,1,0,0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <Border Grid.Row="0" Background="#FAFAFA" Padding="10" BorderBrush="#E0E0E0" BorderThickness="0,0,0,1">
                            <TextBlock Text="Error Details" FontWeight="SemiBold" FontSize="13"/>
                        </Border>

                        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                            <TextBlock Text="{Binding SelectedImportLog.ErrorDetails}" 
                                     TextWrapping="Wrap"
                                     Padding="10"
                                     FontFamily="Consolas"
                                     FontSize="11"
                                     Foreground="#424242">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding SelectedImportLog}" Value="{x:Null}">
                                                <Setter Property="Text" Value="Select an import log to view error details"/>
                                                <Setter Property="Foreground" Value="#9E9E9E"/>
                                                <Setter Property="FontStyle" Value="Italic"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding SelectedImportLog.ErrorDetails}" Value="">
                                                <Setter Property="Text" Value="No errors recorded for this import"/>
                                                <Setter Property="Foreground" Value="#4CAF50"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding SelectedImportLog.ErrorDetails}" Value="{x:Null}">
                                                <Setter Property="Text" Value="No errors recorded for this import"/>
                                                <Setter Property="Foreground" Value="#4CAF50"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </ScrollViewer>
                    </Grid>
                </Border>
            </Grid>
        </Border>

        <!-- Loading Indicator -->
        <Border Grid.Row="3" 
              Background="#E3F2FD" 
              Padding="10" 
              Margin="0,15,0,0"
              CornerRadius="4"
              Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBlock Text="â³ Loading import history..." 
                         Foreground="#1976D2"
                         FontWeight="SemiBold"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
