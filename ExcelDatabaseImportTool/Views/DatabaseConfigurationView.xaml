<UserControl x:Class="ExcelDatabaseImportTool.Views.DatabaseConfigurationView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ExcelDatabaseImportTool.Views"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="1000">
    
    <UserControl.Resources>
        <!-- Button Styles -->
        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#2196F3"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1976D2"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#BDBDBD"/>
                    <Setter Property="Cursor" Value="Arrow"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SecondaryButtonStyle" TargetType="Button" BasedOn="{StaticResource PrimaryButtonStyle}">
            <Setter Property="Background" Value="#757575"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#616161"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="DangerButtonStyle" TargetType="Button" BasedOn="{StaticResource PrimaryButtonStyle}">
            <Setter Property="Background" Value="#F44336"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#D32F2F"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SuccessButtonStyle" TargetType="Button" BasedOn="{StaticResource PrimaryButtonStyle}">
            <Setter Property="Background" Value="#4CAF50"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#388E3C"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#F5F5F5" Padding="15" Margin="0,0,0,10" CornerRadius="4">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0">
                    <TextBlock Text="Database Configurations" 
                             FontSize="20" 
                             FontWeight="Bold"
                             Foreground="#424242"/>
                    <TextBlock Text="Manage database connection settings for MySQL and SQL Server" 
                             FontSize="12" 
                             Foreground="#757575"
                             Margin="0,5,0,0"/>
                </StackPanel>

                <Button Grid.Column="1" 
                        Content="âž• Add New Configuration" 
                        Command="{Binding AddConfigurationCommand}"
                        Style="{StaticResource PrimaryButtonStyle}"
                        VerticalAlignment="Center"/>
            </Grid>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*" MinWidth="300"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="3*" MinWidth="400"/>
            </Grid.ColumnDefinitions>

            <!-- Configuration List -->
            <Border Grid.Column="0" BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="4">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" Background="#FAFAFA" Padding="10" BorderBrush="#E0E0E0" BorderThickness="0,0,0,1">
                        <TextBlock Text="Saved Configurations" FontWeight="SemiBold" FontSize="14"/>
                    </Border>

                    <DataGrid Grid.Row="1"
                            ItemsSource="{Binding Configurations}"
                            SelectedItem="{Binding SelectedConfiguration}"
                            AutoGenerateColumns="False"
                            IsReadOnly="True"
                            SelectionMode="Single"
                            GridLinesVisibility="Horizontal"
                            HeadersVisibility="Column"
                            RowHeight="40"
                            Background="White">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*" MinWidth="100"/>
                            <DataGridTextColumn Header="Type" Binding="{Binding Type}" Width="80"/>
                            <DataGridTextColumn Header="Server" Binding="{Binding Server}" Width="120"/>
                            <DataGridTemplateColumn Header="Actions" Width="150">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                            <Button Content="Edit" 
                                                    Command="{Binding DataContext.EditConfigurationCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                    CommandParameter="{Binding}"
                                                    Style="{StaticResource PrimaryButtonStyle}"
                                                    Padding="8,4"
                                                    Margin="2"/>
                                            <Button Content="Delete" 
                                                    Command="{Binding DataContext.DeleteConfigurationCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                    CommandParameter="{Binding}"
                                                    Style="{StaticResource DangerButtonStyle}"
                                                    Padding="8,4"
                                                    Margin="2"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </Border>

            <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Stretch" Background="#E0E0E0"/>

            <!-- Configuration Form -->
            <Border Grid.Column="2" BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="4">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="15" IsEnabled="{Binding IsEditing}">
                        <TextBlock Text="Configuration Details" 
                                 FontSize="16" 
                                 FontWeight="SemiBold"
                                 Margin="0,0,0,15"/>

                        <!-- Configuration Name -->
                        <TextBlock Text="Configuration Name *" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <TextBox Text="{Binding CurrentConfiguration.Name, UpdateSourceTrigger=PropertyChanged}" 
                               Padding="8" 
                               FontSize="13"
                               Margin="0,0,0,15"/>

                        <!-- Database Type -->
                        <TextBlock Text="Database Type *" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <ComboBox ItemsSource="{Binding DatabaseTypes}"
                                SelectedItem="{Binding CurrentConfiguration.Type}" 
                                Padding="8" 
                                FontSize="13"
                                Margin="0,0,0,15"/>

                        <!-- Server -->
                        <TextBlock Text="Server *" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <TextBox Text="{Binding CurrentConfiguration.Server, UpdateSourceTrigger=PropertyChanged}" 
                               Padding="8" 
                               FontSize="13"
                               Margin="0,0,0,15"/>

                        <!-- Port -->
                        <TextBlock Text="Port *" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <TextBox Text="{Binding CurrentConfiguration.Port, UpdateSourceTrigger=PropertyChanged}" 
                               Padding="8" 
                               FontSize="13"
                               Margin="0,0,0,15"/>

                        <!-- Database Name -->
                        <TextBlock Text="Database Name *" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <TextBox Text="{Binding CurrentConfiguration.Database, UpdateSourceTrigger=PropertyChanged}" 
                               Padding="8" 
                               FontSize="13"
                               Margin="0,0,0,15"/>

                        <!-- Username -->
                        <TextBlock Text="Username *" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <TextBox Text="{Binding CurrentConfiguration.Username, UpdateSourceTrigger=PropertyChanged}" 
                               Padding="8" 
                               FontSize="13"
                               Margin="0,0,0,15"/>

                        <!-- Password -->
                        <TextBlock Text="Password *" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <PasswordBox x:Name="PasswordBox"
                                   Padding="8" 
                                   FontSize="13"
                                   Margin="0,0,0,15"
                                   PasswordChanged="PasswordBox_PasswordChanged"/>

                        <!-- Connection Test Result -->
                        <Border Background="#E3F2FD" 
                              Padding="10" 
                              CornerRadius="4"
                              Margin="0,0,0,15"
                              Visibility="{Binding ConnectionTestResult, Converter={StaticResource StringToVisibilityConverter}}">
                            <TextBlock Text="{Binding ConnectionTestResult}" 
                                     TextWrapping="Wrap"
                                     Foreground="#1976D2"/>
                        </Border>

                        <!-- Action Buttons -->
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                            <Button Content="Test Connection" 
                                  Command="{Binding TestConnectionCommand}"
                                  Style="{StaticResource SuccessButtonStyle}"
                                  IsEnabled="{Binding IsTestingConnection, Converter={StaticResource InverseBooleanConverter}}"/>
                            <Button Content="Save" 
                                  Command="{Binding SaveConfigurationCommand}"
                                  Style="{StaticResource PrimaryButtonStyle}"/>
                            <Button Content="Cancel" 
                                  Command="{Binding CancelEditCommand}"
                                  Style="{StaticResource SecondaryButtonStyle}"/>
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Grid>

        <!-- Validation Errors -->
        <Border Grid.Row="2" 
              Background="#FFEBEE" 
              Padding="10" 
              Margin="0,10,0,0"
              CornerRadius="4"
              Visibility="{Binding ValidationErrors, Converter={StaticResource StringToVisibilityConverter}}">
            <TextBlock Text="{Binding ValidationErrors}" 
                     TextWrapping="Wrap"
                     Foreground="#C62828"
                     FontWeight="SemiBold"/>
        </Border>
    </Grid>
</UserControl>
