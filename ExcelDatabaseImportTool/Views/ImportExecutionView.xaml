<UserControl x:Class="ExcelDatabaseImportTool.Views.ImportExecutionView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ExcelDatabaseImportTool.Views"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="1000">
    
    <UserControl.Resources>
        <!-- Button Styles -->
        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#2196F3"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1976D2"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#BDBDBD"/>
                    <Setter Property="Cursor" Value="Arrow"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SecondaryButtonStyle" TargetType="Button" BasedOn="{StaticResource PrimaryButtonStyle}">
            <Setter Property="Background" Value="#757575"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#616161"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="DangerButtonStyle" TargetType="Button" BasedOn="{StaticResource PrimaryButtonStyle}">
            <Setter Property="Background" Value="#F44336"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#D32F2F"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SuccessButtonStyle" TargetType="Button" BasedOn="{StaticResource PrimaryButtonStyle}">
            <Setter Property="Background" Value="#4CAF50"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#388E3C"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#F5F5F5" Padding="15" Margin="0,0,0,15" CornerRadius="4">
            <StackPanel>
                <TextBlock Text="Execute Import" 
                         FontSize="20" 
                         FontWeight="Bold"
                         Foreground="#424242"/>
                <TextBlock Text="Import Excel data into your configured database" 
                         FontSize="12" 
                         Foreground="#757575"
                         Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

        <!-- Configuration Selection -->
        <Border Grid.Row="1" BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="4" Padding="15" Margin="0,0,0,15">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Import Configuration Selection -->
                <TextBlock Grid.Row="0" Grid.Column="0" 
                         Text="Import Configuration:" 
                         FontWeight="SemiBold"
                         VerticalAlignment="Center"
                         Margin="0,0,10,0"/>
                <ComboBox Grid.Row="0" Grid.Column="1"
                        ItemsSource="{Binding ImportConfigurations}"
                        SelectedItem="{Binding SelectedImportConfiguration}"
                        DisplayMemberPath="Name"
                        Padding="8"
                        FontSize="13"
                        IsEnabled="{Binding IsImporting, Converter={StaticResource InverseBooleanConverter}}"/>

                <!-- Excel File Selection -->
                <TextBlock Grid.Row="1" Grid.Column="0" 
                         Text="Excel File:" 
                         FontWeight="SemiBold"
                         VerticalAlignment="Center"
                         Margin="0,10,10,0"/>
                <TextBox Grid.Row="1" Grid.Column="1"
                       Text="{Binding SelectedExcelFilePath, Mode=TwoWay}"
                       Padding="8"
                       FontSize="13"
                       Margin="0,10,0,0"
                       IsReadOnly="True"
                       IsEnabled="{Binding IsImporting, Converter={StaticResource InverseBooleanConverter}}"/>
                <Button Grid.Row="1" Grid.Column="2"
                      Content="Browse..."
                      Command="{Binding SelectExcelFileCommand}"
                      Style="{StaticResource SecondaryButtonStyle}"
                      Margin="5,10,0,0"
                      IsEnabled="{Binding IsImporting, Converter={StaticResource InverseBooleanConverter}}"/>

                <!-- Action Buttons -->
                <StackPanel Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="2" 
                          Orientation="Horizontal" 
                          HorizontalAlignment="Right"
                          Margin="0,15,0,0">
                    <Button Content="▶ Execute Import" 
                          Command="{Binding ExecuteImportCommand}"
                          Style="{StaticResource SuccessButtonStyle}"
                          FontWeight="Bold"/>
                    <Button Content="⏹ Cancel Import" 
                          Command="{Binding CancelImportCommand}"
                          Style="{StaticResource DangerButtonStyle}"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Progress Section -->
        <Border Grid.Row="2" 
              BorderBrush="#E0E0E0" 
              BorderThickness="1" 
              CornerRadius="4" 
              Padding="15" 
              Margin="0,0,0,15"
              Visibility="{Binding IsImporting, Converter={StaticResource BooleanToVisibilityConverter}}">
            <StackPanel>
                <TextBlock Text="Import Progress" 
                         FontSize="16" 
                         FontWeight="SemiBold"
                         Margin="0,0,0,10"/>

                <!-- Progress Bar -->
                <ProgressBar Value="{Binding ProgressPercentage}" 
                           Height="30" 
                           Minimum="0" 
                           Maximum="100"
                           Margin="0,0,0,10">
                    <ProgressBar.Style>
                        <Style TargetType="ProgressBar">
                            <Setter Property="Foreground" Value="#4CAF50"/>
                        </Style>
                    </ProgressBar.Style>
                </ProgressBar>

                <!-- Progress Text -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Grid.Column="0" 
                             Text="{Binding ProgressMessage}" 
                             FontSize="13"
                             VerticalAlignment="Center"/>
                    <TextBlock Grid.Column="1" 
                             FontSize="14"
                             FontWeight="Bold"
                             VerticalAlignment="Center">
                        <Run Text="{Binding ProgressPercentage, Mode=OneWay}"/>
                        <Run Text="%"/>
                    </TextBlock>
                </Grid>
            </StackPanel>
        </Border>

        <!-- Results Section -->
        <Border Grid.Row="3" 
              BorderBrush="#E0E0E0" 
              BorderThickness="1" 
              CornerRadius="4" 
              Padding="15"
              Visibility="{Binding HasResults, Converter={StaticResource BooleanToVisibilityConverter}}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Results Header -->
                <Grid Grid.Row="0" Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Grid.Column="0" 
                             Text="Import Results" 
                             FontSize="16" 
                             FontWeight="SemiBold"
                             VerticalAlignment="Center"/>
                    
                    <Button Grid.Column="1" 
                          Content="Clear Results" 
                          Command="{Binding ClearResultsCommand}"
                          Style="{StaticResource SecondaryButtonStyle}"
                          Padding="10,6"/>
                </Grid>

                <!-- Statistics Cards -->
                <Grid Grid.Row="1" Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Total Records -->
                    <Border Grid.Column="0" 
                          Background="#E3F2FD" 
                          CornerRadius="4" 
                          Padding="15" 
                          Margin="0,0,5,0">
                        <StackPanel>
                            <TextBlock Text="Total Records" 
                                     FontSize="12" 
                                     Foreground="#1976D2"
                                     FontWeight="SemiBold"/>
                            <TextBlock Text="{Binding TotalRecords}" 
                                     FontSize="28" 
                                     FontWeight="Bold"
                                     Foreground="#1976D2"
                                     Margin="0,5,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- Successful Records -->
                    <Border Grid.Column="1" 
                          Background="#E8F5E9" 
                          CornerRadius="4" 
                          Padding="15" 
                          Margin="5,0,5,0">
                        <StackPanel>
                            <TextBlock Text="Successful" 
                                     FontSize="12" 
                                     Foreground="#388E3C"
                                     FontWeight="SemiBold"/>
                            <TextBlock Text="{Binding SuccessfulRecords}" 
                                     FontSize="28" 
                                     FontWeight="Bold"
                                     Foreground="#388E3C"
                                     Margin="0,5,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- Failed Records -->
                    <Border Grid.Column="2" 
                          Background="#FFEBEE" 
                          CornerRadius="4" 
                          Padding="15" 
                          Margin="5,0,0,0">
                        <StackPanel>
                            <TextBlock Text="Failed" 
                                     FontSize="12" 
                                     Foreground="#D32F2F"
                                     FontWeight="SemiBold"/>
                            <TextBlock Text="{Binding FailedRecords}" 
                                     FontSize="28" 
                                     FontWeight="Bold"
                                     Foreground="#D32F2F"
                                     Margin="0,5,0,0"/>
                        </StackPanel>
                    </Border>
                </Grid>

                <!-- Error Messages -->
                <Border Grid.Row="2" 
                      BorderBrush="#E0E0E0" 
                      BorderThickness="1" 
                      CornerRadius="4"
                      Visibility="{Binding ErrorMessages.Count, Converter={StaticResource CountToVisibilityConverter}}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <Border Grid.Row="0" 
                              Background="#FFEBEE" 
                              Padding="10" 
                              BorderBrush="#E0E0E0" 
                              BorderThickness="0,0,0,1">
                            <TextBlock Text="Error Details" 
                                     FontWeight="SemiBold" 
                                     Foreground="#D32F2F"/>
                        </Border>

                        <ScrollViewer Grid.Row="1" 
                                    VerticalScrollBarVisibility="Auto"
                                    MaxHeight="200">
                            <ItemsControl ItemsSource="{Binding ErrorMessages}" 
                                        Padding="10">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="#FFF3E0" 
                                              Padding="8" 
                                              Margin="0,0,0,5" 
                                              CornerRadius="4">
                                            <TextBlock Text="{Binding}" 
                                                     TextWrapping="Wrap"
                                                     Foreground="#E65100"
                                                     FontSize="12"/>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </Grid>
                </Border>
            </Grid>
        </Border>

        <!-- Status Message -->
        <Border Grid.Row="4" 
              Background="#E3F2FD" 
              Padding="10" 
              Margin="0,15,0,0"
              CornerRadius="4"
              Visibility="{Binding StatusMessage, Converter={StaticResource StringToVisibilityConverter}}">
            <TextBlock Text="{Binding StatusMessage}" 
                     TextWrapping="Wrap"
                     Foreground="#1976D2"
                     FontWeight="SemiBold"/>
        </Border>
    </Grid>
</UserControl>
